{
  "manifest_version": 3,
  "name": "Browserwright",
  "version": "0.1.0",
  "description": "Control your actual Chrome with AI - like Playwright, but for tabs you're already using. Works with Claude, Cursor, VS Code.",
  "permissions": ["debugger", "tabGroups", "contextMenus", "tabs", "nativeMessaging", "storage"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "attach-active-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Attach Browserwright to active tab"
    },
    "detach-active-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Detach Browserwright from active tab"
    }
  },
  "background": {
    "service_worker": "lib/background.mjs",
    "type": "module"
  },
  "action": {
    "default_title": "Click to attach debugger",
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "32": "icons/icon-gray-32.png",
      "48": "icons/icon-gray-48.png",
      "128": "icons/icon-gray-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray-16.png",
    "32": "icons/icon-gray-32.png",
    "48": "icons/icon-gray-48.png",
    "128": "icons/icon-gray-128.png"
  }
}
