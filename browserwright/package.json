{
  "name": "browserwright",
  "description": "Control your actual Chrome browser with AI - like Playwright, but for tabs you're already using",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/sicmundus/browserwright",
  "scripts": {
    "build": "rm -rf dist *.tsbuildinfo && mkdir dist && bun scripts/build-selector-generator.ts && bun scripts/build-bippy.ts && tsc && bun scripts/build-resources.ts",
    "prepublishOnly": "pnpm build",
    "watch": "tsc -w",
    "typecheck": "tsc --noEmit",
    "mcp": "vite-node src/mcp.ts",
    "test": "vitest run -u",
    "test:watch": "vitest"
  },
  "bin": "./bin.js",
  "files": [
    "dist",
    "src",
    "esm",
    "bin.js"
  ],
  "keywords": [],
  "author": "Browserwright",
  "license": "",
  "devDependencies": {
    "@browserbasehq/stagehand": "^3.0.5",
    "@mizchi/selector-generator": "1.50.0-next",
    "@types/chrome": "^0.0.315",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^4.0.8",
    "bippy": "^0.5.27",
    "image-size": "^2.0.2",
    "browserwright-extension": "workspace:*",
    "vite-node": "^5.0.0",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/node-ws": "^1.2.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "colord": "^2.9.3",
    "devtools-protocol": "^0.0.1543509",
    "diff": "^8.0.2",
    "hono": "^4.10.6",
    "kill-port-process": "^3.2.1",
    "playwright-core": "^1.56.1",
    "posthtml": "^0.16.7",
    "posthtml-beautify": "^0.7.0",
    "string-dedent": "^3.0.2",
    "strip-ansi": "^7.1.2",
    "user-agents": "^1.1.669",
    "ws": "^8.18.3",
    "zod": "^3"
  }
}
